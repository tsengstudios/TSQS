<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ca_chore_image"
            android:layout_width="123dp"
            android:layout_height="96dp"
            android:layout_margin="16dp"
            android:alpha="1.0"
            android:scaleType="centerCrop"
            tools:src="@drawable/food_1" />

        <TextView
            android:id="@+id/ca_chore_name"
            style="@style/AppTheme.Title"
            android:layout_weight="1"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="12dp"
            android:ellipsize="none"
            android:scrollHorizontally="false"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            tools:text="Some Chore" />

    </LinearLayout>

    <Button
        android:id="@+id/ca_button_refuse"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="49dp"
        android:layout_marginTop="125dp"
        android:text="Refuse"
        android:theme="@style/AppTheme" />

    <Button
        android:id="@+id/ca_button_complete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/ca_button_refuse"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="41dp"
        android:layout_marginBottom="0dp"
        android:text="Finished" />

    <Button
        android:id="@+id/ca_button_snooze"
        android:layout_width="156dp"
        android:layout_height="94dp"
        android:layout_below="@+id/ca_button_refuse"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="39dp"
        android:text="Snooze" />

    <ProgressBar
        android:id="@+id/progressBarSpinning"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/ca_button_snooze"
        android:layout_alignStart="@+id/ca_button_snooze"
        android:layout_marginStart="53dp"
        android:indeterminateTint="@color/chore_past_text_color"
        android:visibility="invisible"
        tools:visibility="visible" />

</RelativeLayout>